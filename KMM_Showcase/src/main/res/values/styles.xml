<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_green_button</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTitle">
        <item name="android:textColor">@color/blackRussian</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppLabel">
        <item name="android:textColor">@color/mischka</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="AppInfo">
        <item name="android:textColor">@color/blackRussian</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
</resources>
